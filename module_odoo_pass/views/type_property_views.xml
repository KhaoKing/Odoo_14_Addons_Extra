<odoo>
    <data>
        <record id="type_property_view_tree" model="ir.ui.view">
            <field name="name">type_property_view_tree</field>
            <field name="model">type_property.real_state</field>
            <field name="arch" type="xml">
                <!-- <tree editable='bottom'> -->
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="type_property_view_form" model="ir.ui.view">
            <field name="name">type_property_view_form</field>
            <field name="model">type_property.real_state</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_offer_property_offer)d"
                                    class="oe_stat_button" 
                                    type="action"
                                    icon="fa-bars">
                                    <div class="o_field_widget o_stat_info">
                                        <span class="o_stat_value"><field name="offer_count"/></span>
                                        <span class="o_stat_text">Offers</span>
                                    </div>
                            </button>
                        </div>
                        
                        <field name="name" style="font-size: 36px; font: solid"/>
                            <notebook>
                                <page string="Property Offers">
                                    <field name="prop_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="expected_price" />
                                            <field name="state" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    
    </data>
</odoo>
