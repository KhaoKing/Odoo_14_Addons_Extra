<odoo>
    <data>
    <!-- explicit list view definition -->
        <!-- view tree -->
        <record model="ir.ui.view" id="module_odoo_pass.list">
            <field name="name">real_estate_tree</field>
            <field name="model">module_odoo.module_odoo_pass</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                    <field name="type_property"/>
                </tree>
            </field>
        </record>

        <!-- view form -->
        <record id="real_estate_view_form" model="ir.ui.view">
            <field name="name">real_estate_view_form</field>
            <field name="model">module_odoo.module_odoo_pass</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_change_sold" string="Sold" type="object"/>
                        <button name="button_change_canceled" string="Cancel" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_acepted,sold"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="name"/>
                                <br/>
                                <field name="tag_property" widget="many2many_tags"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type_property"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price" />
                                <field name="selling_price"/>  
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group string="General Information">
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orentation"/>
                                        <field name="total_area"/>
                                    </group>
                                    <group>
                                        <field name="active"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group string="Sales Information">
                                    <field name="salesman"/>
                                    <field name="buyer">                        
                                    </field>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids">
                                    <tree>
                                        <field name="offer_price" />
                                        <field name="buyer_user" />
                                        <field name="validity" />
                                        <button name="accepted_value_state_offer" type="object" class="oe_stat_button" icon="fa-check"/>
                                        <button name="canceled_value_state_offer" type="object" class="oe_stat_button" icon="fa-close"/>
                                        <field name="date_deadline" />
                                        <field name="status_offer"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="model_name_view_search" model="ir.ui.view">
            <field name="name">real_estate_view_search</field>
            <field name="model">module_odoo.module_odoo_pass</field>
            <field name="arch" type="xml">
                <search string="Real Estate Seach">
                    <field name="name" filter_domain="['|', ('name','ilike', self)" string="Name"/>
                    <field name="postcode" filter_domain="['|',('postcode','ilike', self)]" string="Postcode"/>
                    <field name="bedrooms" filter_domain="['|',('bedrooms','ilike', self)]" string="Bedrooms"/>
                    <field name="living_area" filter_domain="['|',('living_area','ilike', self)]" string="Living Area"/>
                    <field name="expected_price" filter_domain="['|',('expected_price','ilike', self)]" string="Expected Price"/>
                    <field name="facades" filter_domain="['|',('facades','ilike', self)]" string="Selling Price"/>
                        <separator/>
                    <filter name="state" string="New" domain="[('state', '=', 'new')]"/>
                    <filter name="state" string="Offer Received" domain="[('state', '=', 'offer received')]"/>

                    <group string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>