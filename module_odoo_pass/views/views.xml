<odoo>
  <data>
    <!-- explicit list view definition -->
        <!-- view tree -->
        <record model="ir.ui.view" id="module_odoo_pass.list">
          <field name="name">real_estate_tree</field>
          <field name="model">module_odoo.module_odoo_pass</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="postcode"/>
              <field name="bedrooms"/>
              <field name="living_area"/>
              <field name="expected_price"/>
              <field name="selling_price"/>
              <field name="date_availability"/>
            </tree>
          </field>
        </record>

        <!-- view form -->
        <record id="real_estate_view_form" model="ir.ui.view">
          <field name="name">real_estate_view_form</field>
          <field name="model">module_odoo.module_odoo_pass</field>
          <field name="arch" type="xml">
            <form>
              <sheet>
                    <group>
                    <field name="name" style="font-size: 36px; font: solid"/>
                      <group>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                      </group>
                      <group>
                        <field name="expected_price"/>
                        <field name="selling_price"/>  
                      </group>
                    </group>
                    <notebook>
                      <page string="Description" style="border-top: 1px solid; border-color: #001000; border-radius: 3px;">
                        <group>
                          <group>
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orentation"/>
                          </group>
                        </group>
                      </page>
                    </notebook>
              </sheet>
            </form>
          </field>
        </record>

        <record id="model_name_view_search" model="ir.ui.view">
          <field name="name">real_estate_view_search</field>
          <field name="model">module_odoo.module_odoo_pass</field>
          <field name="arch" type="xml">
            <search string="Real Estate Seach">
                  <field name="name" filter_domain="['|', ('name','ilike', self)" string="Name"/>
                  <field name="postcode" filter_domain="['|',('postcode','ilike', self)]" string="Postcode"/>
                  <field name="bedrooms" filter_domain="['|',('bedrooms','ilike', self)]" string="Bedrooms"/>
                  <field name="living_area" filter_domain="['|',('living_area','ilike', self)]" string="Living Area"/>
                  <field name="expected_price" filter_domain="['|',('expected_price','ilike', self)]" string="Expected Price"/>
                  <field name="selling_price" filter_domain="['|',('selling_price','ilike', self)]" string="Selling Price"/>
                  <field name="date_availability" filter_domain="['|',('date_availability','ilike', self)]" string="Date Availability"/>
                  <separator/>
                  <filter string="Date Less Than Today" name="Date_younger"
                        domain="[('date_availability', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                  <filter string="Date Older Than Today" name="Date_Older"
                        domain="[('date_availability', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                  <group string="Group By">
                      <filter string="Garden Orientation" name="garden_orentation" context="{'group_by': 'garden_orentation'}"/>
                      <filter string="Bedrooms" name="Bedrooms_in_house" context="{'group_by': 'bedrooms'}"/>
                      <filter string="Selling Price" name="Selling_cost_house" context="{'group_by': 'selling_price'}"/>
                  </group>
            </search>
          </field>
        </record>


    <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="odoo_test_action">
          <field name="name">Propierties</field>
          <field name="res_model">module_odoo.module_odoo_pass</field>
          <field name="view_mode">tree,form</field>
